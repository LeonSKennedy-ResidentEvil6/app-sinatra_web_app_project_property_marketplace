
<div class="mui-row">
    <% if flash.has?(:error) %>
        <h3 class="error"><%= flash[:error] %></h3>
    <% end %>

    <div class="mui-col-md-12">
        <h1>Our property sellers</h1>

        <ul><% @sellers.each do |seller|%>
            <li>
                <h3><a href="/users/<%=seller.id%>"><%=seller.full_name%></a></h3>
            </li>
            <%end%>
        </ul>
    </div>

    <div class="mui-col-md-12 mui--divider-top">
        <h1>Our property buyers</h1>

        <ul><% @buyers.each do |buyer|%>
            <li>
                <h3><a href="/users/<%=buyer.id%>"><%=buyer.full_name%></a></h3>
            </li>
            <%end%>
        </ul>
    </div>
</div>