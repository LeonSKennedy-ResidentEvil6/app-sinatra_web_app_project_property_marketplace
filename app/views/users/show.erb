<h1>My Profile</h1>

    <% if current_user == @user %>
        <h2><%= @user.first_name%></h2>
        <h2><%= @user.last_name%></h2>
        <h2><%= @user.email%></h2>
        <h2>Biography: <%= @user.biography%></h2>
        <h3><a href="/users/<%= current_user.id %>/edit">Update profile</a></h3>

    <% else %>

    <h1>All users profile</h1>

        <h2><%= @user.first_name%></h2>
        <h2><%= @user.last_name%></h2>
        <h2><%= @user.email%></h2>
        <h2>Biography: <%= @user.biography%></h2>

    <% end %>