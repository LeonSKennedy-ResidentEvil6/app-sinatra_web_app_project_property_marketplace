
<div class="mui-row">
    <div class="mui-col-md-12">
        <h1>Sign up</h1>

        <form method="POST" action="/signup" class="mui-form"> 

            <div class="mui-textfield">
                <input type="text" name="full_name" placeholder="Full Name" id="fullname" required/>
            </div>

            <div class="mui-textfield"> 
                <input type="text" name="username" placeholder="Username" id="username" required/>
            </div>

            <div class="mui-textfield"> 
                <input type="email" name="email"  placeholder="Email" id="email" required/>
            </div>

            <div class="mui-textfield">
                <input type="password" name="password" placeholder="Password" id="password" required/>
            </div>

            <h3>Sign up as a seller?</h3>

            <div class="mui-radio">
                <label><input type="radio" name="seller" value="yes" checked />Yes</label>
            </div>

            <div class="mui-radio">
                <label><input type="radio" name="seller" value="no" />No</label>
            </div>

            <button type="submit" class="mui-btn mui-btn--primary">Create Account</button>
        </form>

        <% if flash.has?(:error) %>
            <h3 class="error"><%= flash[:error] %></h3>
        <% end %>
    </div>
</div>